@model List<RetailerWholesalerSystem.Models.WholesalerProduct>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Available Quantity</th>
            <th>Order Quantity</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr class="product-row">
                <td>@Model[i].Product.Name</td>
                <td>$@Model[i].Price.ToString("F2")</td>
                <td>@Model[i].AvailableQuantity</td>
                <td>
                    <input type="hidden" name="productIds" value="@Model[i].ProductID" />
                    <input type="number" name="quantities" value="0" min="0" max="@Model[i].AvailableQuantity" 
                           class="form-control quantity-input" data-price="@Model[i].Price" />
                </td>
                <td class="product-subtotal">$0.00</td>
            </tr>
        }
    </tbody>
</table>