@model List<RetailerWholesalerSystem.Models.WholesalerProduct>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Available</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var product = Model[i];
            <tr>
                <td>@product.Product.Name</td>
                <td>@product.Product.Description</td>
                <td>@product.AvailableQuantity</td>
                <td>@string.Format("{0:C}", product.Price)</td>
                <td>
                    <input type="hidden" name="productIds" value="@product.ProductID" />
                    <input type="number" name="quantities" class="form-control quantity-input"
                           data-price="@product.Price" min="0" max="@product.AvailableQuantity" value="0" />
                </td>
            </tr>
        }
    </tbody>
</table>