<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style>
        /* Print-specific styles */
        @@media print {
            .no-print

        {
            display: none;
        }

        body {
            font-size: 12pt;
        }

        .receipt-container {
            width: 100%;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .receipt-header {
            text-align: center;
            margin-bottom: 20px;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }

        .receipt-section {
            margin-bottom: 15px;
        }

        .receipt-footer {
            margin-top: 30px;
            text-align: center;
            border-top: 1px solid #ccc;
            padding-top: 10px;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 8px;
                border-bottom: 1px solid #ddd;
            }

        .total-row {
            font-weight: bold;
            background-color: #f9f9f9;
        }

        }
    </style>
</head>
<body>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>