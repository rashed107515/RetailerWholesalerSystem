@model RetailerWholesalerSystem.Models.Transaction

@{
    ViewBag.Title = "Order Confirmation";
}

<div class="row">
    <div class="col-md-12">
        <div class="alert alert-success">
            <h3><i class="fa fa-check-circle"></i> Your order has been placed successfully!</h3>
            <p>Transaction ID: @Model.TransactionID</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @Html.Partial("_TransactionDetails", Model)
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h3>Order Items</h3>
        <table class="table">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>

            @foreach (var item in Model.TransactionDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>@string.Format("{0:C}", item.UnitPrice)</td>
                    <td>@string.Format("{0:C}", item.Subtotal)</td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p>
            @Html.ActionLink("View Details", "Details", new { id = Model.TransactionID }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Back to Transactions", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>