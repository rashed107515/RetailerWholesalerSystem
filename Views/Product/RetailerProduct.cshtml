@model IEnumerable<RetailerWholesalerSystem.Models.RetailerProduct>
@{
    ViewData["Title"] = "My Inventory";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>My Inventory</h2>
        </div>
        <div class="col-md-4 text-right">
            <a asp-controller="Product" asp-action="BrowseWholesalerProducts" class="btn btn-primary">Browse Wholesaler Products</a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Description</th>
                        <th>Category</th>
                        <th>Your Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Description</td>
                            <td>@item.Product.Category</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.StockQuantity</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="EditRetailerProduct" asp-route-id="@item.RetailerProductID" class="btn btn-sm btn-warning">Edit</a>
                                    <a asp-action="DeleteRetailerProduct" asp-route-id="@item.RetailerProductID" class="btn btn-sm btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>You haven't added any products to your inventory yet.</p>
            <p>Click the "Browse Wholesaler Products" button to start adding products from wholesalers.</p>
        </div>
    }
</div>