@model RetailerWholesalerSystem.Models.RetailerProduct
@{
    ViewData["Title"] = "Edit Inventory Item";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Edit Inventory Item</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <form asp-action="EditRetailerProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RetailerProductID" />
                <input type="hidden" asp-for="ProductID" />
                <input type="hidden" asp-for="RetailerID" />
                @* <input type="hidden" asp-for="Price" /> *@

                <div class="form-group">
                    <label class="control-label">Product Name</label>
                    <input value="@(Model.Product?.Name ?? "Unknown")" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label class="control-label">Category</label>
                    <input value="@(Model.Product?.Category?.Name ?? "No Category")" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Purchase Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input value="@Model.Price.ToString("F2")" class="form-control" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label">Your Selling Price</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="StockQuantity" class="control-label">Quantity in Stock</label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="RetailerInventory" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Pricing Tips</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Your purchase price was @Model.Price.ToString("C")</li>
                        <li>Consider a markup of 20-30% for standard products</li>
                        <li>Premium or unique items may command higher markups</li>
                        <li>Track your inventory levels accurately to avoid stockouts</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}